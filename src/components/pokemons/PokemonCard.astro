---
interface Props {
    name: string;
    url: string;
    isBig?: boolean;
}
const { name, url, isBig = false } = Astro.props;
const id = url.split("/").at(-2);
const imageSrc = `https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/other/official-artwork/${id}.png`;
---

<a
    href={`/pokemons/${name}`}
    class:list={[
        `rounded-lg flex flex-col justify-center items-center p-2`,
        { border: !isBig },
    ]}
>
    <img
        src={imageSrc}
        transition:name={`${name}-image`}        
        alt={name}
        class:list={[{ "w-26 h:26": isBig, "w-16 h-16": !isBig }]}
    />
    <span
        class:list={[
            "font-bold capitalize",
            { "text-4xl text-blue-300": isBig,"text-md": !isBig },
        ]}>#{id} {name}</span
    >
</a>
